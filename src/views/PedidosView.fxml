<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:id="mainPane" prefWidth="750" prefHeight="410" style="-fx-background-color: #d9d9d9;">

    <!-- LOGO -->
    <ImageView layoutX="20" layoutY="20" fitWidth="60" fitHeight="60" pickOnBounds="true" preserveRatio="true" />

    <!-- Tabs -->
    <HBox layoutX="120" layoutY="20" spacing="10">
        <ToggleButton fx:id="usuariosBtn" text="Usuarios" />
        <ToggleButton fx:id="pedidosBtn" text="Pedidos" selected="true"/>
    </HBox>

    <!-- Barra de búsqueda -->
    <HBox layoutX="150" layoutY="80" spacing="10">
        <Button text="≡" style="-fx-background-color: transparent; -fx-font-size: 16px;"/>
        <TextField promptText="Buscar" prefWidth="400" style="-fx-background-color: #f3eaff;"/>
        <Button text="🔍" style="-fx-background-color: transparent;"/>
    </HBox>

    <!-- Botones verticales -->
    <VBox layoutX="20" layoutY="100" spacing="15">
        <Button text="Insertar" styleClass="button" prefWidth="100"/>
        <Button text="Borrar" styleClass="button" prefWidth="100"/>
        <Button text="Modificar" styleClass="button" prefWidth="100"/>
        <Button text="CSV" styleClass="button" prefWidth="100"/>
        <Button text="XML" styleClass="button" prefWidth="100"/>
    </VBox>

    <!-- Tabla de Pedidos -->
    <TableView fx:id="tablaPedidos" layoutX="150" layoutY="140" prefWidth="580" prefHeight="230">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colUsuarioId" text="Usuario ID" prefWidth="80"/>
            <TableColumn fx:id="colProductoId" text="Producto ID" prefWidth="80"/>
            <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="70"/>
            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="100"/>
            <TableColumn fx:id="colProductoNombre" text="Producto" prefWidth="100"/>
            <TableColumn fx:id="colProductoPrecio" text="Precio" prefWidth="80"/>
            <TableColumn fx:id="colUsuarioNombre" text="Nombre Usuario" prefWidth="120"/>
            <TableColumn fx:id="colUsuarioApellido" text="Apellido Usuario" prefWidth="120"/>
        </columns>
    </TableView>
</AnchorPane>